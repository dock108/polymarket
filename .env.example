# Example environment file (copy to .env and fill values as needed)

# SQLite for dev; will use Postgres in prod (e.g., postgresql+psycopg://user:pass@host/db)
DATABASE_URL=sqlite:///./data/dev.db

# External API keys (required for full functionality)
ODDS_API_KEY=
DATAGOLF_API_KEY=

# Modeling/refresh configuration
# Cushion to apply to Polymarket implied probability (0.025 = 2.5%)
FEE_CUSHION=0.025
# Minimum 60s, default 600s (10 minutes)
REFRESH_INTERVAL_SECONDS=600
